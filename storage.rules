rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 1. 공개 이미지 읽기 허용 (우선 적용)
    match /images/{fileName} {
      allow read: if true;
      allow write: if false;
    }

    // 2. 사용자별 업로드 경로 (하위 규칙)
    match /users/{userId}/photos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}


